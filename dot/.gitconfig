[user]
	email = bulah.roman@gmail.com
	name = Roman Bulakh
[push]
	default = current
[merge]
  conflictstyle = diff3
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --oneline --graph --decorate
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  pager = less -SR
	editor = vim
[color]
	ui = true
